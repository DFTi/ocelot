.ui.label.teal.ribbon Settings
p
  .ui.slider.checkbox.field.toggle-server
    input(type='checkbox')
    label Transmitter is OFF
p
  .ui.action.fluid.input.listen-port
    input(type='text', name='port', value='', placeholder='Listening port')
    .ui.button Change Port
.ui.label.teal.ribbon Receivers
table.ui.table.segment.receivers.hidden
  thead
    tr
      th Select
      th Optional Subdirectory
      th Hostname
  tbody
.ui.fluid.action.input.transmission
  input(type='file', name='host', value='')
  .ui.button Queue Transmission
.ui.message.no-receivers No receivers are setup to accept transmission

p

.ui.label.teal.ribbon Activity
- if (activity.length > 1)
  table.ui.table.segment
    thead
      tr
        th Filename
        th Progress
        th Rate
    tbody
      for item in activity
        tr
          td
            .ui.green.progress
              .bar(style='width: 93%;')
          td some...thing.mp4
          td 12.78 MB/s
- else
  .ui.message No activity to report
